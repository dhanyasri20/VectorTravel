@model TravelBookingSystem.Models.Flight
@{
    ViewData["Title"] = "Complete Your Booking";
}

<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-7">
            <h4 class="mb-3">Choose a payment method</h4>

            <ul class="nav nav-tabs" id="paymentTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="card-tab" data-bs-toggle="tab" data-bs-target="#card-payment" type="button" role="tab" aria-controls="card-payment" aria-selected="true">
                        <i class="bi bi-credit-card-fill"></i> Credit/Debit Card
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="upi-tab" data-bs-toggle="tab" data-bs-target="#upi-payment" type="button" role="tab" aria-controls="upi-payment" aria-selected="false">
                        <i class="bi bi-phone-fill"></i> UPI
                    </button>
                </li>
            </ul>

            <form asp-controller="Payment" asp-action="Process" method="post" class="p-4 border border-top-0 rounded-bottom">
                <input type="hidden" name="flightId" value="@Model.Id" />

                <div class="tab-content" id="paymentTabsContent">
                    <div class="tab-pane fade show active" id="card-payment" role="tabpanel" aria-labelledby="card-tab">
                        <div class="mb-3">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" placeholder="1234 5678 1234 5678" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Expiry Date</label>
                                <input type="text" class="form-control" placeholder="MM / YY" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" placeholder="123" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="upi-payment" role="tabpanel" aria-labelledby="upi-tab">
                        <div class="mb-3">
                            <label class="form-label">Enter your UPI ID</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="yourname@bank">
                                <button class="btn btn-outline-primary" type="button">Verify</button>
                            </div>
                            <div class="form-text">You will receive a payment request on your UPI app.</div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Pay ₹ @Model.Price.ToString("N0")</button>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Fare Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fw-bold">@Model.DepartureCity → @Model.ArrivalCity</div>
                        <div class="badge bg-secondary">1 Adult</div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-airplane-fill text-primary"></i> Base Fare</span>
                            <span>₹ @Model.Price.ToString("N0")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-receipt text-success"></i> Taxes & Fees</span>
                            <span>INCLUDED</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-light fw-bold fs-5">
                            <span>Total Amount</span>
                            <span>₹ @Model.Price.ToString("N0")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 