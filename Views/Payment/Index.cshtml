@model TravelBookingSystem.Models.Flight
@{
    ViewData["Title"] = "Complete Your Booking";
}

<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-7">
            <h4 class="mb-3">Complete Your Payment</h4>
            
            <div class="p-4 border rounded">
                <p class="lead">
                    You're just one step away from booking your flight.
                </p>
                <p class="text-muted">
                    Click the button below to proceed to our secure payment gateway. All major payment methods including UPI, Cards, and Net Banking are supported.
                </p>
                
                <hr class="my-4">
                
                <form asp-controller="Payment" asp-action="CreateOrder" method="post">
                    <input type="hidden" name="flightId" value="@Model.Id" />
                    <button class="w-100 btn btn-primary btn-lg" type="submit">
                        Securely Pay ₹ @Model.Price.ToString("N0")
                    </button>
                </form>
            </div>
            
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Fare Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="fw-bold">@Model.DepartureCity → @Model.ArrivalCity</div>
                        <div class="badge bg-secondary">1 Adult</div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-airplane-fill text-primary"></i> Base Fare</span>
                            <span>₹ @Model.Price.ToString("N0")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-receipt text-success"></i> Taxes & Fees</span>
                            <span>INCLUDED</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-light fw-bold fs-5">
                            <span>Total Amount</span>
                            <span>₹ @Model.Price.ToString("N0")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 