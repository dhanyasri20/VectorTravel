@model TravelBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Your E-Ticket";
    Layout = null; // Use a null layout for a clean, printable page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VectorTravel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
    <style>
        body {
            background-color: #f4f5f7;
            font-family: 'Inter', sans-serif;
        }

        .boarding-pass-container {
            max-width: 900px;
            margin: 50px auto;
        }

        .boarding-pass {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            display: flex;
            overflow: hidden;
        }

        .main-section {
            padding: 2rem;
            flex-grow: 1;
        }

        .stub-section {
            background: #f8f9fa;
            padding: 2rem;
            width: 300px;
            flex-shrink: 0;
            border-left: 3px dashed #dee2e6;
            text-align: center;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

            .header .airline {
                font-size: 1.5rem;
                font-weight: 700;
                color: #0d6efd;
            }

            .header .pass-type {
                font-weight: 500;
                color: #6c757d;
            }

        .flight-info {
            display: flex;
            align-items: center;
            margin: 2rem 0;
        }

            .flight-info .city-code {
                font-size: 4rem;
                font-weight: 700;
                line-height: 1;
            }

            .flight-info .path {
                flex-grow: 1;
                text-align: center;
                color: #adb5bd;
            }

                .flight-info .path .airplane-icon {
                    font-size: 2rem;
                    transform: rotate(90deg);
                    display: inline-block;
                }

        .details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .detail-item label {
            display: block;
            font-size: 0.75rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
            font-weight: 500;
            text-transform: uppercase;
        }

        .detail-item span {
            font-weight: 600;
            font-size: 1rem;
        }

        .stub-section .detail-item {
            text-align: left;
        }

        .stub-section .qr-code {
            margin-top: 1rem;
        }

        .stub-section .barcode {
            width: 100%;
            height: 50px;
            background-color: #343a40;
            margin-top: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="boarding-pass-container">
        <div class="boarding-pass">
            <div class="main-section">
                <div class="header">
                    <span class="airline">VectorTravel</span>
                    <span class="pass-type">BOARDING PASS</span>
                </div>

                <div class="flight-info">
                    <div class="departure text-start">
                        <span class="city-code">@Model.Flight.DepartureCity.Substring(0, 3).ToUpper()</span>
                        <span class="d-block text-muted">@Model.Flight.DepartureCity</span>
                    </div>
                    <div class="path">
                        <span class="airplane-icon">&#9992;</span>
                    </div>
                    <div class="arrival text-end">
                        <span class="city-code">@Model.Flight.ArrivalCity.Substring(0, 3).ToUpper()</span>
                        <span class="d-block text-muted">@Model.Flight.ArrivalCity</span>
                    </div>
                </div>

                <div class="details-grid">
                    <div class="detail-item">
                        <label>Passenger</label>
                        <span>@Model.User.FirstName @Model.User.LastName</span>
                    </div>
                    <div class="detail-item">
                        <label>Flight</label>
                        <span>@Model.Flight.Airline @Model.Flight.FlightNumber</span>
                    </div>
                    <div class="detail-item">
                        <label>Date</label>
                        <span>@Model.Flight.DepartureTime.ToString("dd MMM yyyy")</span>
                    </div>
                    <div class="detail-item">
                        <label>Departs</label>
                        <span>@Model.Flight.DepartureTime.ToString("HH:mm")</span>
                    </div>
                </div>
            </div>

            <div class="stub-section">
                <div class="header">
                    <span class="airline">VectorTravel</span>
                </div>
                <div class="details-grid mt-4">
                    <div class="detail-item">
                        <label>Seat</label>
                        <span>@Model.SelectedSeat</span>
                    </div>
                    <div class="detail-item">
                        <label>Booking ID</label>
                        <span>BK-@Model.Id</span>
                    </div>
                </div>
                <div id="qrcode" class="qr-code d-flex justify-content-center mt-3"></div>
                <div class="barcode"></div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        // This script generates the QR Code
        new QRCode(document.getElementById("qrcode"), {
            text: "Booking ID: BK-@Model.Id, Passenger: @Model.User.FirstName @Model.User.LastName, Flight: @Model.Flight.FlightNumber, Seat: @Model.SelectedSeat",
            width: 150,
            height: 150,
        });
    </script>
</body>
</html> 