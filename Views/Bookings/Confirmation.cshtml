@model TravelBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="my-2"><i class="bi bi-check-circle-fill"></i> Booking Confirmed!</h2>
                </div>
                <div class="card-body p-4">
                    <h4 class="card-title">Thank you for booking with VectorTravel, @Model.PassengerName!</h4>
                    <p class="text-muted">Your e-ticket has been sent to your registered email address. Please find your booking details below.</p>
                    <hr>

                    <h5>Flight Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>From:</strong> @Model.Flight.DepartureCity</p>
                            <p><strong>To:</strong> @Model.Flight.ArrivalCity</p>
                            <p><strong>Airline:</strong> @Model.Flight.Airline</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Date:</strong> @Model.Flight.DepartureTime.ToString("dd MMM yyyy")</p>
                            <p><strong>Departure:</strong> @Model.Flight.DepartureTime.ToString("HH:mm")</p>
                            <p><strong>Arrival:</strong> @Model.Flight.ArrivalTime.ToString("HH:mm")</p>
                        </div>
                    </div>

                    <hr>

                    <h5>Passenger &amp; Payment Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Passenger:</strong> @Model.PassengerName</p>
                            <p><strong>Seat:</strong> @Model.SelectedSeat</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Amount Paid:</strong> ₹@Model.Amount.ToString("N2")</p>
                            <p><strong>Payment ID:</strong> @Model.PaymentId</p>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Index" asp-controller="Bookings" class="btn btn-primary">View All My Bookings</a>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 