@model IEnumerable<TravelBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var booking in Model)
            {
                <div class="list-group-item list-group-item-action flex-column align-items-start mb-3 shadow-sm">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@booking.Flight.DepartureCity to @booking.Flight.ArrivalCity</h5>
                        <small>Booked on: @booking.BookingDate.ToString("dd MMM yyyy")</small>
                    </div>
                    <p class="mb-1">
                        <strong>Airline:</strong> @booking.Flight.Airline (@booking.Flight.FlightNumber) <br />
                        <strong>Departure:</strong> @booking.Flight.DepartureTime.ToString("f") <br />
                        <strong>Arrival:</strong> @booking.Flight.ArrivalTime.ToString("f")
                    </p>
                    <div class="d-flex w-100 justify-content-between align-items-center mt-2">
                        <span class="fw-bold fs-5">Price: ₹ @booking.Flight.Price.ToString("N0")</span>
                        
                        <form asp-controller="Bookings" asp-action="Cancel" method="post">
                            <input type="hidden" name="bookingId" value="@booking.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You have not booked any flights yet.
        </div>
    }
</div> 