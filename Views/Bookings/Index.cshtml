@model IEnumerable<TravelBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var booking in Model)
            {
                <div class="list-group-item mb-3 p-4 shadow-sm border-0 rounded">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@booking.Flight.DepartureCity to @booking.Flight.ArrivalCity</h5>
                                <small class="text-muted">Booked: @booking.BookingDate.ToString("dd MMM yyyy")</small>
                            </div>
                            <p class="mb-2">
                                <strong>Airline:</strong> @booking.Flight.Airline (@booking.Flight.FlightNumber)
                            </p>
                            <div class="d-flex justify-content-between text-muted small">
                                <span><strong>Departs:</strong> @booking.Flight.DepartureTime.ToString("f")</span>
                                <span><strong>Arrives:</strong> @booking.Flight.ArrivalTime.ToString("f")</span>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <h4 class="fw-bold text-primary mb-2">₹ @booking.Amount.ToString("N0")</h4>

                            <a asp-action="Ticket" asp-controller="Bookings" asp-route-bookingId="@booking.Id" class="btn btn-primary">
                                <i class="bi bi-ticket-perforated-fill"></i> View E-Ticket
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You have not booked any flights yet.
        </div>
    }
</div> 