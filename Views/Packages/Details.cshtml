@model TravelBookingSystem.Models.HolidayPackages
@{
    ViewData["Title"] = Model.Title;
}
    <div class="package-hero" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('@Model.ImageUrl');">
    <div class="container text-white text-center">
        <h1 class="display-4 fw-bold">@Model.Title</h1>
        <p class="lead"><i class="bi bi-geo-alt-fill"></i> @Model.Location ・ @Model.DurationDays Days / @(Model.DurationDays - 1) Nights</p>
    </div>
</div>

<div class="container my-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <h3 class="mb-4">Day-wise Itinerary</h3>
            <div class="accordion" id="itineraryAccordion">
                @foreach (var day in Model.Itinerary)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading-@day.Day">
                            <button class="accordion-button @(day.Day > 1 ? "collapsed" : "")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@day.Day">
                                <strong>Day @day.Day:</strong> &nbsp; @day.Title
                            </button>
                        </h2>
                        <div id="collapse-@day.Day" class="accordion-collapse collapse @(day.Day == 1 ? "show" : "")" data-bs-parent="#itineraryAccordion">
                            <div class="accordion-body">
                                @day.Description
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 100px;">
                <div class="card-body"> 
                    <p class="text-muted mb-0">Starting from</p>
                    <h2 class="card-title fw-bold">₹ @Model.Price.ToString("N0")</h2>
                    <p class="text-muted small">Per person</p>
                    <div class="d-grid my-4">
                        <a href="#" class="btn btn-primary btn-lg">Book This Package</a>
                    </div>
                    <h5 class="fw-bold">Inclusions</h5>
                    <ul class="list-unstyled">
                        @foreach (var inclusion in Model.Inclusions)
                        {
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> @inclusion</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 